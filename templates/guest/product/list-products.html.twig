{% block main %}
	{% for product in products %} 

		<article>

			<h2>{{ product.title }}</h2>
			<p>{{ product.description }}</p>
			<p>Categorie : {{ product.category.title }}</p>

			{% if product.image %}
				<img src="{{ asset('uploads/' ~ product.image) }}" />
			{% endif %}
			
			<a href="{{ path('details-product', {'id' : product.id}) }}">Voir le produit</a>

		</article>

	{% endfor %}
{% endblock main %}
	



